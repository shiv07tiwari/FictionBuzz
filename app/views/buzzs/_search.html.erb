<nav class="panel is-link">
	<p class="panel-heading ">
		Search Users
	</p>
	<%= simple_form_for :search, url: search_user_path, method: "GET" do |f| %>
	<div class="field">
            <div class="control">
                <%= f.input :query, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
            </div>
        </div>
    <div class="field">
            <div class="control">
                <%= f.button :submit, "Search", class:"button is-link is-outlined is-fullwidth" %>
            </div>
        </div>
<% end %>
</nav>